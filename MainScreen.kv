#:kivy 1.0

<MainScreen>:
    
    BoxLayout:

        orientation: 'vertical'
        padding: 20
        spacing: 100
        Button:
            text: "Game Start"
            pos_hint: {'x':.25, 'y': 0.5}        
            size_hint: 0.5, 0.5
            on_release: root.GamestartButton()
        Button:
            text: "My info"
            pos_hint: {'x':0.4, 'y': 0.1}
            size_hint: 0.2, 0.1
            on_release: root.MyinfoButton()
        Button:
            text: "Friends"
            pos_hint: {'x':0.4, 'y': 0.1}
            size_hint: 0.2, 0.1
            on_release: root.FriendsButton()
        Button:
            text: "fuck"
            on_release: app.fuck()
